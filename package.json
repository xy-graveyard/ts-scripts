{
  "name": "@xylabs/ts-scripts",
  "homepage": "https://xylabs.com",
  "bugs": {
    "url": "https://github.com/xylabs/ts-scripts/issues",
    "email": "support@xylabs.com"
  },
  "description": "TypeScript project scripts",
  "author": {
    "name": "XY Labs Development Team",
    "url": "https://xylabs.com",
    "email": "support@xylabs.com"
  },
  "license": "LGPL-3.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/xylabs/ts-scripts.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "xylabs",
    "utility",
    "typescript"
  ],
  "version": "1.0.4",
  "sideEffects": false,
  "dependencies": {
    "@rollup/plugin-typescript": "^8.2.5",
    "@xylabs/eslint-config": "^2.0.16",
    "depcheck": "^1.4.2",
    "eslint": "^7.32.0",
    "npm-check-updates": "^11.8.3",
    "rollup": "^2.56.2",
    "ts-prune": "^0.10.0",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5"
  },
  "bin": {
    "build": "bin/build.js",
    "clean": "bin/clean.js",
    "compile": "bin/compile.js",
    "cycle": "bin/cycle.js",
    "dead": "bin/dead.js",
    "deps": "bin/deps.js",
    "deploy": "bin/deploy.js",
    "fix": "bin/fix.js",
    "lint": "bin/lint.js",
    "reinstall": "bin/reinstall.js",
    "up": "bin/up.js",
    "updo": "bin/updo.js"
  },
  "scripts": {
    "build": "rm -r -f bin && yarn deps && yarn lint && yarn lint-pkg && yarn compile && yarn compile",
    "compile": "tsc -p ./tsconfig.json",
    "deploy": "yarn build && yarn version --patch && yarn publish",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx,.json ./src",
    "lint-pkg": "npmPkgJsonLint .",
    "fix": "eslint --ext .js,.jsx,.ts,.tsx,.json ./src --fix",
    "cycle": "NODE_ENV=--max-old-space-size=8092 eslint --rule 'import/no-cycle: [1, { maxDepth: 10 }]' ./src",
    "clean": "rm -f *.tsbuildinfo && rm -r -f ./bin",
    "reinstall": "rm -r -f ./node_modules && rm -f ./yarn.lock && rm -f ./yarn-error.log && yarn install && yarn outdated",
    "dead": "yarn ts-prune",
    "up": "yarn ncu",
    "updo": "yarn install && yarn upgrade && yarn ncu -u && yarn reinstall",
    "deps": "yarn depcheck"
  },
  "devDependencies": {
    "@types/node": "^16.7.1",
    "eslint-plugin-tsdoc": "^0.2.14",
    "npm-package-json-lint": "^5.2.3",
    "npm-package-json-lint-config-default": "^3.0.0"
  }
}
